%h2 Create New Movie

= form_tag movies_path, :method => :post do

    = label :movie, 'Title'
    = text_field :movie, :title

    = label :movie, 'Rating'
    = select :movie, :rating, ['G','PG','PG-13','R','NC-17']
 
    = label :movie,  'Released On'
    = date_select :movie, :release_date ,:start_year => 1930

    = label :movie, :description ,"Description"
    = text_area :movie , :description
    %br
    = submit_tag 'Save Changes'

%br
%div
= link_to 'Cancel', movies_path()